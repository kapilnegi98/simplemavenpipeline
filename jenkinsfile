pipeline {

    agent any
    tools {
        maven 'apache-maven-3.6.3' 
    }
    stages {
        stage('Compile stage') {
            steps {
                bat "mvn clean compile" 
        }
    }

         stage('testing stage') {
             steps {
                bat "mvn test"
        }
    }

          stage('deployment stage') {
              steps {
                bat "mvn clean"
        }
    }
    stage('Sonarqube') {
    environment {
        scannerHome = tool 'sonar scanner'
    }
    steps {
        withSonarQubeEnv('sonarqube') {
            bat "C:\Users\kapilnegi\Downloads\sonarqube-8.2.0.32929\sonarqube-8.2.0.32929"
        }
        timeout(time: 10, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
        }
    }
}

  }

}
